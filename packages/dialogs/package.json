{
  "name": "@local/dialogs",
  "version": "1.0.0",
  "description": "AI-powered dialog management service using GPT-4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint src/**/*.ts --ignore-pattern '**/*.spec.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/tests/**'",
    "typecheck": "tsc -p tsconfig.lint.json --noEmit",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:setup": "pnpm run docker:test:up && delay 5 && npm run prisma:migrate",
    "test:teardown": "pnpm run docker:test:down",
    "test": "cross-env NO_COLOR=1 playwright test",
    "test:unit": "playwright test tests/unit",
    "test:e2e": "playwright test tests/e2e",
    "test:performance": "playwright test tests/performance",
    "test:integration:docker": "pnpm run test:setup && playwright test tests/integration && npm run test:teardown",
    "test:e2e:docker": "pnpm run test:setup && playwright test tests/e2e && npm run test:teardown",
    "test:performance:docker": "pnpm run test:setup && playwright test tests/performance && npm run test:teardown",
    "test:parallel": "pnpm run test:unit & npm run test:integration & npm run test:e2e & npm run test:performance & wait",
    "test:coverage": "playwright test --reporter=html",
    "test:debug": "playwright test --debug",
    "test:docker": "pnpm run test:setup && npm test && npm run test:teardown",
    "test:integration": "pnpm run test:integration:setup && pnpm run test:integration:run && pnpm run test:integration:teardown",
    
    "test:integration:setup": "docker-compose -f ../../docker-compose.test.yml up -d",
    "test:integration:run": "playwright test tests/integration",
    "test:integration:teardown": "docker-compose -f ../../docker-compose.test.yml down -v",
    "check-migrations": "cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test tsx scripts/check-migrations.ts",
    "check-migrations:prod": "tsx scripts/check-migrations.ts"
  },
  "keywords": [
    "ai",
    "dialog",
    "gpt-4",
    "conversation",
    "chatbot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "dotenv": "^16.0.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "prisma": "^5.0.0",
    "sinon": "^17.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
