{
  "name": "@local/prisma",
  "version": "1.0.0",
  "description": "Unified Prisma client wrapper for Steam Multichat MVP",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./ledger": {
      "types": "./generated/ledger/index.d.ts",
      "import": "./generated/ledger/index.js",
      "require": "./generated/ledger/index.js"
    },
    "./dialogs": {
      "types": "./generated/dialogs/index.d.ts",
      "import": "./generated/dialogs/index.js",
      "require": "./generated/dialogs/index.js"
    }
  },
  "scripts": {
    "generate": "pnpm run generate:ledger && npm run generate:dialogs",
    "generate:ledger": "prisma generate --schema=./schemas/ledger/schema.prisma",
    "generate:dialogs": "prisma generate --schema=./schemas/dialogs/schema.prisma",
    "migrate:ledger": "prisma migrate dev --schema=./schemas/ledger/schema.prisma",
    "migrate:dialogs": "prisma migrate dev --schema=./schemas/dialogs/schema.prisma",
    "studio:ledger": "prisma studio --schema=./schemas/ledger/schema.prisma",
    "studio:dialogs": "prisma studio --schema=./schemas/dialogs/schema.prisma",
    "build": "tsc",
    "test": "cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test LEDGER_DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test playwright test",
    "test:unit": "cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test LEDGER_DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test playwright test tests/unit",
    "test:setup": "pnpm run generate",
    "test:docker": "pnpm run test:setup && npm test",
    "test:integration": "pnpm run test:integration:setup && npm run test:integration:migrate && npm run test:integration:run && npm run test:integration:teardown",
    "test:integration:setup": "docker-compose -f ../../docker-compose.test.yml up -d && delay 5",
    "test:integration:migrate": "cross-env LEDGER_DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test prisma migrate deploy --schema=./schemas/ledger/schema.prisma && cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test prisma migrate deploy --schema=./schemas/dialogs/schema.prisma",
    "test:integration:run": "cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test LEDGER_DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test playwright test",
    "test:integration:teardown": "docker-compose -f ../../docker-compose.test.yml down -v",
    "check-migrations": "cross-env DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test LEDGER_DATABASE_URL=postgresql://test:test@localhost:54320/steambot_test tsx scripts/check-migrations.ts",
    "check-migrations:prod": "tsx scripts/check-migrations.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "pnpm run generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
