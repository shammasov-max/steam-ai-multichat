{
  "name": "@local/steam-agent",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/**/*.ts --ignore-pattern '**/*.spec.ts' --ignore-pattern '**/*.test.ts'",
    "typecheck": "tsc -p tsconfig.lint.json --noEmit",
    "test": "playwright test",
    "test:integration": "pnpm run test:integration:setup && pnpm run test:integration:run && pnpm run test:integration:teardown",
    "test:integration:setup": "docker-compose -f ../../docker-compose.test.yml up -d",
    "test:integration:run": "playwright test",
    "test:integration:teardown": "docker-compose -f ../../docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@doctormckay/stdlib": "1.16.1",
    "protobufjs": "^7.5.4",
    "steam-totp": "^2.1.1",
    "steam-user": "^4.29.3",
    "steamcommunity": "^3.47.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^22.5.4",
    "typescript": "^5.9.2"
  }
}
