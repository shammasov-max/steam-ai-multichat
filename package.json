{
  "name": "@local/app",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "pkg": {
    "assets": [
      "node_modules/@doctormckay/steam-crypto",
      "node_modules/lzma"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern '**/*.spec.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/tests/**' --ignore-pattern '**/test/**' --ignore-pattern '**/__tests__/**'",
    "lint:all": "pnpm run lint && pnpm --filter @local/steam-agent run lint 2>/dev/null || true && pnpm --filter @local/dialogs run lint",
    "typecheck": "tsc -p tsconfig.lint.json --noEmit",
    "typecheck:all": "pnpm run typecheck && pnpm --filter @local/steam-agent run typecheck && pnpm --filter @local/dialogs run typecheck && pnpm --filter @local/prisma run typecheck 2>/dev/null || true",
    "test": "playwright test",
    "test:unit": "playwright test tests/unit",
    "test:e2e": "playwright test tests/app-e2e-flow.spec.ts",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:setup": "tsx tests/setup.ts",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:integration": "pnpm run test:integration:setup && pnpm run test:integration:run && pnpm run test:integration:teardown",
    "test:integration:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:integration:run": "playwright test tests/app-bot-integration.spec.ts  tests/app-bot-to-user-interaction.spec.ts",
    "test:integration:teardown": "docker-compose -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@doctormckay/stdlib": "1.16.1",
    "@local/prisma": "workspace:^",
    "@local/steam-agent": "workspace:^",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/sqlite3": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "delay-cli": "^2.0.0",
    "lucide-react": "^0.540.0",
    "next": "^15.4.6",
    "postcss": "^8.5.6",
    "prisma": "^6.14.0",
    "protobufjs": "^7.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "steam-totp": "^2.1.1",
    "steam-user": "^4.29.3",
    "steamcommunity": "^3.47.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.45.0",
    "@types/node": "^22.5.4",
    "@types/steam-totp": "^2.1.2",
    "@types/steam-user": "^5.1.0",
    "@types/steamcommunity": "^3.43.8",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
